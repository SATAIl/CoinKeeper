        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"andrii\",\n  \"password\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', jsonData.accessToken);",
                  "}",
                  "if (jsonData.user && jsonData.user.id) {",
                  "  pm.collectionVariables.set('userId', jsonData.user.id.toString());",
                  "}",
                  "pm.test('Login should return accessToken', function () {",
                  "  pm.expect(jsonData.accessToken).to.exist;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
